<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartActivity" android:orientation="vertical" android:id="@+id/startLinearLayout"
        android:background="@drawable/testtransit">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#000000"
            android:visibility="visible"
            android:text="CITYCOM"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_sans_extralight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

    <TextView
            android:text="Live weather data from every city on the world"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="20sp"
            android:textAlignment="center" android:textColor="#000000" android:textAllCaps="true"
            android:visibility="invisible" android:fontFamily="@font/nunito_sans_extralight"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:id="@+id/floatingActionButton" app:fabCustomSize="65dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            android:visibility="invisible" android:src="@drawable/baseline_navigate_before_black_18dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:id="@+id/floatingActionButton2"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" app:fabCustomSize="65dp" android:visibility="invisible"
            android:src="@drawable/baseline_navigate_next_black_18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>